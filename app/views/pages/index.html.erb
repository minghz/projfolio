<h1>Listing pages</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pageable.pages.each do |page| %>
      <tr>
        <td><%= page.name %></td>
        <td>
          <%= image_tag page.image_url.to_s %>
        </td>

        <% if signed_in? && current_user.admin? %>
        
          <td><%= link_to 'Edit',
                          edit_polymorphic_path([@pageable, page]) %></td>
          <td><%= link_to 'Destroy',
                          url_for([@pageable, page]),
                          method: :delete,
                          data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        </tr>
    <% end %>
    </tbody>

</table>

<br>

<%= link_to 'New Page', new_post_page_path(@pageable) %>
