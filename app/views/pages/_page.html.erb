<% @pages.each do |page| %>
  
  <div class="small-10 columns">
    <%= image_tag page.image_url.to_s, alt: page.name, class: "center" %>
  </div>
  <div class="small-2 columns">
    <% if (signed_in? && current_user?(@owner) ) || current_user.admin? %>
      <%= link_to 'Edit', edit_polymorphic_path([@pageable, page]) %>
      <%= link_to 'Destroy', url_for([@pageable, page]),
                            method: :delete,
                            data: { confirm: 'Are you sure?' } %>
    <% end %>
  </div>

<% end %>
