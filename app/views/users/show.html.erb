<div class="row">
  <hr />
  <div class="small-4 columns">
    <%= image_tag(@user.avatar_url) %>
  </div>
  <div class="small-8 columns">
    <h1> About <%= @user.name %> </h1>
  </div>
  <hr />
</div>

<div class="row">
  <% if @user.posts.empty? %>
    <p> <%= @user.name %> has no posts </p>
  <% else %>
    <h2>  <%= @user.name %>'s Posts: </h2>
    <%= render "posts/post", post_list: @user.posts %>
  <% end %>
</div>

