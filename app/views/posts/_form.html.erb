<% @post.tags.build %>

<%= form_for @post do |f| %>
  
  <%= render "shared/form_errors", object: @post %>

  <div class="field">
    <%= f.label :title, "Title" %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description, "Synopsis" %><br />
    <%= f.text_area :description %>
  </div>

    <a href="#" id="add_step">Add Step</a>
    
    <div id="step_list">
      <% if @steps_array %>
        <span hidden><%= @steps_array.length%></span>
        <br/>
        <% @steps_array.each do |s| %>
          <div class="one_step">
          <b><%= @steps_array.index(s)+1 %></b>
          <input class="post_step" 
            name="post[step][<%= @steps_array.index(s)+1 %>]" 
            type="text" value="<%= s %>"/>
          <a href="#" class="remove_step"
                  id="<%= @steps_array.index(s)+1 %>">Remove</a>
          <br/>
          </div>
        <% end %>

        <% else %>
            <span hidden>0</span>
        <% end %>
    
    </div>

    <h2>Tags</h2>
    <%= render :partial => 'tags/form',
                :locals => {:form => f} %>
    <div class="actions">
        <%= f.submit  "Submit", :class => 'submit' %>
    </div>

<% end %>

