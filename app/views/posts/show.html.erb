<div id="row">

    <div class="large-8 columns"> 
      <h1><%= @post.title %></h1>
      <h5>by <%= @post.user.name %>
        <% if signed_in? && @post.user == current_user %>
          <%= link_to 'Edit', edit_post_path(@post) %> |
          <%= link_to 'Add Pages', new_post_page_path(@post) %>
        <% end %> 
      </h5>
      <hr />
        some kickass banner which is linked to 
        <%= link_to "All Pages", post_pages_path(@post) %>
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
      <hr />
      <div id="row">
        <h3>Synopsis</h3>
        <p><%= @post.description %></p>
        <% unless @post.steps.empty? %>
          <p>Steps: <%= @post.steps %> </p>
        <% end %>
        <% if @post.tags.any? %>
          <p>Tags:<%= join_tags(@post) %></p>
        <% end %>
      </div>
    </div>

    <div class="large-4 columns">

      <% if @comments.any? %>
        <%= render "comments/comment" %>
      <% end %>

      <% if signed_in? %>
        <h3>Leave a Comment:</h3>
          <%= render "comments/form" %>
      <% end %>

    </div>

    <br />


</div>
 

