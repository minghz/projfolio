<!-- Header and Nav -->
  <nav class="top-bar">
    <ul class="title-area">
      <!-- Title Area -->
      <li class="name">
        <h1>
          <%= link_to 'Wrapel', posts_path %>
        </h1>
      </li>
      <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
    </ul>
 
    <section class="top-bar-section">
      <!-- Left Nav Section -->
      <ul class="left">
          <li class="divider"></li>
        <% if signed_in? %>
          <li><%= link_to 'New Post', new_post_path %></li>
          <li class="divider"></li>
        <% end %>
      </ul>
 
      <!-- Right Nav Section -->
      <ul class="right">
        <% if signed_in? %>
          <li class="divider"></li>
          <li><%= link_to "Profile", current_user %></li>
          <li class="divider"></li>
          <li><%= link_to "Settings", edit_user_path(current_user) %></li> 
          <li class="divider"></li>
          <li><%= link_to "Sign out", signout_path, method: "delete" %></li>
          <li class="divider"></li>
        <% else %>
          <li><%= link_to "Sign in", signin_path %></li>
        <% end %>
      </ul>
    </section>
  </nav>
