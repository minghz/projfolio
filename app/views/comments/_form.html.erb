<%= form_for [@commentable, @comment] do |f| %>
  
  <!-- Since the only error possible in a comment is
       an empty comment, I won't render shared/form_errors
       for this form
  -->

  <div class="field">
    <%= f.text_area :body, rows: 8 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

