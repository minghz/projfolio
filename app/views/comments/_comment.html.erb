<h3>Comments</h3>

<% @comments.each do |comment| %>

    <div class="comment_box">
        <b><%= comment.commenter %></b>
        <p><%= comment.body %> </p>
        <% if signed_in? && current_user.admin? %>
          <%= link_to 'Destroy Comment',
            url_for([@commentable, comment]),
            method: :delete,
            data: { confirm: 'Are you sure?' }
          %>
        <% end %>
    </div>
<% end %>
